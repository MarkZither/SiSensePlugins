                        "items": [
                            {
                                "type": "TextBlock",
                                "class": "blox-pivot-title",
                                "separator": true,
                                "weight": "bold",
                                "hidden": "true",
                                "horizontalAlignment": "center",
                                "text": "Brand"
                            },
                            {
                                "type": "TextBlock",
                                "weight": "light",
                                "horizontalAlignment": "left",
                                "separator": true,
                                "spacing": "light",
                                "text": "{panel:Brand}"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "separator": true,
                        "width": "50%",
                        "items": [
                            {
                                "type": "TextBlock",
                                "class": "blox-pivot-title",
                                "hidden": "true",
                                "horizontalAlignment": "center",
                                "separator": true,
                                "text": "Category"
                            },
                            {
                                "type": "TextBlock",
                                "horizontalAlignment": "left",
                                "separator": true,
                                "weight": "light",
                                "spacing": "none",
                                "text": "{panel:Category}"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "config": {
        "actions": {
            "maxActions": 5,
            "spacing": "large",
            "buttonSpacing": 20,
            "actionsOrientation": "horizontal",
            "actionAlignment": "left",
            "showCard": {
                "actionMode": "inline",
                "inlineTopMargin": -1,
                "style": "default"
            }
        },
        "factSet": {
            "title": {
                "size": "default",
                "color": "default",
                "weight": "bold",
                "warp": true
            },
            "value": {
                "size": "default",
                "color": "default",
                "weight": "default",
                "warp": true
            },
            "spacing": -1
        },
        "supportsInteractivity": true,
        "height": 241,
        "imageBaseUrl": ""
    }
